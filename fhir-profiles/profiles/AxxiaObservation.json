{
  "resourceType": "StructureDefinition",
  "id": "axxia-observation",
  "url": "https://axxia.health/fhir/StructureDefinition/axxia-observation",
  "version": "1.0.0",
  "name": "AxxiaObservation",
  "title": "Perfil Axxia de Observación Clínica",
  "status": "active",
  "date": "2025-11-03",
  "publisher": "Axxia - El Ecosistema Inteligente de Salud",
  "description": "Perfil FHIR R4 para observaciones clínicas y resultados de laboratorio en Axxia. Usa LOINC y UCUM.",
  "fhirVersion": "4.0.1",
  "kind": "resource",
  "abstract": false,
  "type": "Observation",
  "baseDefinition": "http://hl7.org/fhir/StructureDefinition/Observation",
  "derivation": "constraint",
  "differential": {
    "element": [
      {
        "id": "Observation.status",
        "path": "Observation.status",
        "min": 1,
        "mustSupport": true
      },
      {
        "id": "Observation.code",
        "path": "Observation.code",
        "min": 1,
        "mustSupport": true,
        "binding": {
          "strength": "preferred",
          "description": "Códigos LOINC para observaciones y laboratorio",
          "valueSet": "https://axxia.health/fhir/ValueSet/observation-codes-loinc"
        }
      },
      {
        "id": "Observation.code.coding",
        "path": "Observation.code.coding",
        "slicing": {
          "discriminator": [
            {
              "type": "value",
              "path": "system"
            }
          ],
          "rules": "open"
        },
        "min": 1
      },
      {
        "id": "Observation.code.coding:loinc",
        "path": "Observation.code.coding",
        "sliceName": "loinc",
        "min": 1,
        "max": "1",
        "binding": {
          "strength": "required",
          "valueSet": "http://loinc.org"
        }
      },
      {
        "id": "Observation.subject",
        "path": "Observation.subject",
        "min": 1,
        "type": [
          {
            "code": "Reference",
            "targetProfile": [
              "http://hl7.org/fhir/StructureDefinition/Patient"
            ]
          }
        ],
        "mustSupport": true
      },
      {
        "id": "Observation.effectiveDateTime",
        "path": "Observation.effectiveDateTime",
        "min": 1,
        "mustSupport": true
      },
      {
        "id": "Observation.value[x]",
        "path": "Observation.value[x]",
        "mustSupport": true
      },
      {
        "id": "Observation.valueQuantity",
        "path": "Observation.valueQuantity",
        "mustSupport": true
      },
      {
        "id": "Observation.valueQuantity.value",
        "path": "Observation.valueQuantity.value",
        "min": 1
      },
      {
        "id": "Observation.valueQuantity.unit",
        "path": "Observation.valueQuantity.unit",
        "min": 1,
        "binding": {
          "strength": "required",
          "description": "Unidades UCUM",
          "valueSet": "http://hl7.org/fhir/ValueSet/ucum-units"
        }
      },
      {
        "id": "Observation.valueQuantity.system",
        "path": "Observation.valueQuantity.system",
        "min": 1,
        "fixedUri": "http://unitsofmeasure.org"
      },
      {
        "id": "Observation.interpretation",
        "path": "Observation.interpretation",
        "mustSupport": true,
        "comment": "Normal/Alto/Bajo según rangos de referencia"
      },
      {
        "id": "Observation.referenceRange",
        "path": "Observation.referenceRange",
        "mustSupport": true,
        "comment": "Rangos de referencia del laboratorio"
      },
      {
        "id": "Observation.note",
        "path": "Observation.note",
        "comment": "Interpretación clínica del resultado"
      }
    ]
  }
}
